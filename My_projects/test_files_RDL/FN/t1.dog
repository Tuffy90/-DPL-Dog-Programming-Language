# -----------------------------
# 1) Обычная функция
# -----------------------------
fn sum(a, b) {
  return a + b
}

let x = sum(2, 3)
say x   # 5


# -----------------------------
# 2) Лямбда (анонимная функция)
# -----------------------------
let inc = (n) => n + 1
say inc(10)  # 11


# -----------------------------------------
# 3) Функция принимает функцию (callback)
# -----------------------------------------
fn apply(value, fnc) {
  return fnc(value)
}

say apply(5, (v) => v * v)   # 25
say apply(7, inc)            # 8


# -------------------------------------------------
# 4) Функция возвращает лямбду (замыкание / closure)
# -------------------------------------------------
fn makeAdder(k) {
  return (x) => x + k
}

let add7 = makeAdder(7)
say add7(10)  # 17


# -----------------------------------------
# 5) Лямбда с несколькими аргументами
# -----------------------------------------
let mul = (a, b) => a * b
say mul(6, 9)  # 54